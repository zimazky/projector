{
  "compilerOptions": {
      "baseUrl": "./",
      "typeRoots": ["node_modules/@types"],
      "outDir": "./dist/",
      "sourceMap": true,
      "sourceRoot": "./src/",
      "module": "CommonJS",
      "target": "ES2022",
      "jsx": "react",
      "noEmitOnError": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
}